@using Microsoft.AspNetCore.Http
@{
    var user = Context.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieTime</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieTime.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/logo.png" />
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #000;
        }

        .navbar-brand, .nav-link {
            color: goldenrod !important;
            font-weight: bold;
        }

            .nav-link:hover {
                color: red !important;
            }

        .page-header {
            background: linear-gradient(to right, goldenrod, red);
            color: black;
            padding: 40px 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        .btn-custom {
            background-color: gold;
            color: black;
            font-weight: bold;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            margin-top: 10px;
        }

            .btn-custom:hover {
                background-color: red;
                color: white;
            }

        footer {
            background-color: #111;
            color: white;
            padding: 1rem 0;
        }

        a {
            color: gold;
        }

            a:hover {
                color: red;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">🎬 MovieTime</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">מי אנחנו</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Movies">כל הסרטים</a>
                        </li>

                        @if (string.IsNullOrEmpty(user))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login">התחברות</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Register">הרשמה</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Logout">התנתקות</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/BookTicket">רכישת כרטיסים</a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link">@user ,שלום</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="page-header">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="container pb-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        &copy; 2025 - MovieTime - By Noam Kam
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
