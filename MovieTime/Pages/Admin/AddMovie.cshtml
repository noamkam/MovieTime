@page
@model MovieTime.Pages.Admin.AddMovieModel
@{
    ViewData["Title"] = "הוסף סרט";
}
<form method="post" class="container mt-4" dir="rtl">
    <div class="form-group mb-3">
       <input asp-for="Movie.Title" class="form-control" placeholder="כותרת"/>
        <span asp-validation-for="Movie.Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <textarea asp-for="Movie.Description" class="form-control" placeholder="תיאור"></textarea>
        <span asp-validation-for="Movie.Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <input asp-for="Movie.Duration" type="number" class="form-control" placeholder="משך בדקות"/>
        <span asp-validation-for="Movie.Duration" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <select asp-for="Movie.GenreId" class="form-control" asp-items="Model.GenresSelectList">
            <option value="">בחר ז'אנר</option>
        </select>
        <span asp-validation-for="Movie.GenreId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <select asp-for="Movie.LanguageId" class="form-control" asp-items="Model.LanguagesSelectList">
            <option value="">בחר שפה</option>
        </select>
        <span asp-validation-for="Movie.LanguageId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input asp-for="Movie.ReleaseDate" class="form-control" placeholder="תאריך יציאה" type="date"/>
        <span asp-validation-for="Movie.ReleaseDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <input asp-for="Movie.Image" class="form-control" placeholder="תמונת הסרט"/>
        <span asp-validation-for="Movie.Image" class="text-danger"></span>
    </div>

    <div class="form-check mb-3" dir="rtl">
        <input asp-for="Movie.DubbedIntoHebrew" class="form-check-input" type="checkbox" />
        <label asp-for="Movie.DubbedIntoHebrew" class="form-check-label">מדובב לעברית</label>
        <span asp-validation-for="Movie.DubbedIntoHebrew" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-warning mt-4">הוסף סרט</button>

</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-success mt-3 text-center">@Model.Message</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
