@page
@model MovieTime.Pages.Admin.DeleteMovieModel
@{
    ViewData["Title"] = "מחיקת סרטים";
}

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p class="text-success mt-3 text-center" style="background: none;">@Model.Message</p>
}

<div class="container mt-4" dir="rtl" style="max-width: 700px;">
    @foreach (var movie in Model.Movies)
    {
        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
            <form method="post" asp-page-handler="Delete" asp-route-id="@movie.Id" style="margin: 0;">
                <button type="submit"
                        style="background-color: yellow; color: black; border: none; padding: 6px 16px; border-radius: 5px; cursor: pointer;"> מחק
                </button>
            </form>
            <div>
                <strong>@movie.Title</strong>
                <span style="font-size: 0.9rem;">(@(movie.ReleaseDate.HasValue? movie.ReleaseDate.Value.ToString("yyyy") : ""))</span>

            </div>
        </div>
    }
</div>
