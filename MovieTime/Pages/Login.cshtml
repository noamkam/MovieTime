@page
@model LoginModel
@{
    ViewData["Title"] = "התחברות";
}
<form method="post" class="d-flex flex-column align-items-center">
    <div class="form-group">
        <input asp-for="Username" class="form-control" placeholder="שם משתמש" dir="rtl"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input asp-for="Password" type="password" class="form-control" placeholder="סיסמה" dir="rtl"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning mt-4">התחבר/י</button>

    @if (Model.ErrorMessage != null)
    {
        <p class="text-danger mt-2">@Model.ErrorMessage</p>
    }
</form>
