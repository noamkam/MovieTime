@page
@model RegisterModel
@{
    ViewData["Title"] = "הרשמה";
}

<style>
    .center-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center; 
        height: 80vh; 
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 300px;
    }

    input, button {
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    button {
        background-color: goldenrod;
        border: none;
        color: black;
        font-weight: bold;
        cursor: pointer;
    }

        button:hover {
            background-color: red;
            color: white;
        }

    p {
        margin-top: 1rem;
    }
</style>

<div class="center-container">
    <form method="post">
        <input asp-for="Name" placeholder="שם מלא" type="text" dir="rtl"/>
        <input asp-for="PhoneNumber" placeholder="טלפון" type="text" dir="rtl" />
        <input asp-for="DateOfBirth" placeholder="תאריך לידה" type="date" dir="rtl" />
        <input asp-for="Email" placeholder="מייל" type="email" dir="rtl" />
        <input asp-for="UserName" placeholder="שם משתמש" type="text" dir="rtl" />
        <input asp-for="Password" placeholder="סיסמה" type="password" dir="rtl" />
        <button type="submit">שלח/י</button>
    </form>

    @if (Model.ErrorMessage != null)
    {
        <p style="color:red;">@Model.ErrorMessage</p>
    }
</div>
